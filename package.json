{
  "name": "figma-sprite-tool",
  "version": "0.1.0",
  "description": "CLI tool to generate PNG/SVG sprite sheets, SCSS mixins, and JSON metadata from Figma design systems",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "figma-sprite": "./dist/index.js"
  },
  "files": [
    "dist/**",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.3",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup && node scripts/copy-templates.mjs",
    "prepack": "npm run build",
    "sprite": "node dist/index.js generate",
    "release:check": "npm run typecheck && npm run test && npm run build && npm pack --dry-run",
    "release:manual": "npm run release:check && npm publish --access public",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "figma",
    "sprite",
    "sprite-sheet",
    "design-system",
    "cli",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "commander": "^12.0.0",
    "handlebars": "^4.7.0",
    "inquirer": "^13.2.1",
    "picocolors": "^1.0.0",
    "potpack": "^2.0.0",
    "sharp": "^0.33.0",
    "svgo": "^3.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.2.0",
    "sass": "^1.97.3",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  }
}
